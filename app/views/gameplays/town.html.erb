<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%= stylesheet_link_tag 'town', media: 'all', 'data-turbolinks-track': 'reload' %>
</head>

<%= render 'nav_header'%>

<div class="flex flex-col">
  <div id="left-town">
      <img src="<%= asset_path('town-left.png') %>" alt="Left Town">
  </div>
  <div class="welcome-banner">
    <h1 class = "center-text">Welcome to Town <%=@current_user.current_level%>!</h1>
  </div>
  <div id="non_players">
    <% @nonplayers.each do |nonplayer| %>
      <% container_id = "#{nonplayer.name.downcase}_image_container" %>
        <div id="<%= container_id %>" class="nonplayer-container">
          <%= link_to character_profile_path(nonplayer), class: "nonplayer-link" do %>
            <img id="<%= nonplayer_img_tag(nonplayer) %>" src="<%= asset_path(nonplayer_gif_file(nonplayer)) %>" alt="<%= nonplayer.name %>">
            <h3 class = "text-base"><%= nonplayer.name %></h3>
          <% end %>
        </div>
    <% end %>
  </div>
  
  <div id="right-town">
    <img src="<%= asset_path('town-right.png') %>" alt="Left Town">
  </div>
</div>

