<div id="sidebar" class="bg-gray-200 border flex flex-col align-center items-center gap-2 w-[250px] border-r min-h-screen h-full">
  <div class="mx-auto flex flex-row max-w-7xl items-center justify-between p-6 lg:px-8">
    <h2 class="nicefont">FinLit Quest</h2>
  </div>
  <div class="flex flex-col justify-center align-center gap-2">
    <%= link_to root_path, class: "hermitfont", method: :get do %>
      <div class="flex flex-row items-center sidebar-list <%= "current_page_link" if current_page?(root_path) %>">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6">
          <path d="M11.47 3.841a.75.75 0 0 1 1.06 0l8.69 8.69a.75.75 0 1 0 1.06-1.061l-8.689-8.69a2.25 2.25 0 0 0-3.182 0l-8.69 8.69a.75.75 0 1 0 1.061 1.06l8.69-8.689Z"/>
