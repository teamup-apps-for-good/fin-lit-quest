<!-- Container for Player's Inventory -->
<div id="<%= @context.player_character.name %>_inventory" class="inventory-container-co">
  <h2 style="font-weight: bold;"><%= @context.player_character.name %>'s Inventory</h2>
  <% @inventory_hash_player.each do |item_name, quantity| %>
    <% item = Item.find_by(name: item_name) %>
    <% if item && quantity > 0 %>
      <div>
        <%= item_name %> $<%= (@counter_offer_service.value_of(@context.player_character, item.id, quantity).to_f / quantity).ceil %> - <%= quantity %> in stock
      </div>
    <% end %>
  <% end %>
</div>

