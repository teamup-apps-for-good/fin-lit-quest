<p style="color: green"><%= notice %></p>

<%= render 'gameplays/nav_header'%>

<h1>Inventories</h1>

<div id="inventories">
  <% @inventories.each do |inventory_entry| %>
    <div id="<%= dom_id inventory_entry %>">
      <p>
        <strong>Name:</strong>
        <%= inventory_entry.item.name %>
      </p>

      <p>
        <strong>Description:</strong>
        <%= inventory_entry.item.description %>
      </p>

      <p>
        <strong>Quantity:</strong>
        <%= inventory_entry.quantity %>
      </p>
      
      <% if @level > 1 %>
        <p>
          <strong>Value:</strong>
          <%= inventory_entry.item.value %>
        </p>
      <% end %>

    </div>

    <br>
  <% end %>
</div>

<%= button_to "Back", :back, class: "button-b", method: :get %>
