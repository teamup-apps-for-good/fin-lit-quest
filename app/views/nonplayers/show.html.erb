

<div class="flex flex-col justify-center center-text py-4">
  <h1>Showing Non Player</h1>
  <div class="flex justify-center">
    <div class="card-display">
      <%= render @nonplayer %>
    </div>
  </div>
</div>

<div class="flex flex-wrap justify-center py-4">
  <%= button_to "Edit this nonplayer", edit_nonplayer_path(@nonplayer), method: :get, class:"hermitfont green-button mr-2" %>
  <%= button_to "Back to nonplayers", nonplayers_path, method: :get, class:"hermitfont blue-button ml-2 mr-2" %>
  <%= button_to "Destroy this nonplayer", @nonplayer, method: :delete, class:"hermitfont red-button ml-2"%>
</div>
