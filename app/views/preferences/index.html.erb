<%= render 'gameplays/nav_header'%>

<div class = "flex flex-col justify-center center-text">
  <h1 class="text-4xl mt-2">Preferences</h1>
  
  <%= button_to "New preference", new_preference_path, method: :get, class:"green-button hermitfont mt-4 mb-4" %>

  <div id="preferences" class="flex flex-wrap justify-center py-4">
    <% @preferences.each do |preference| %>
      <div class="card-display">
        <%= render preference %>
        <p>
          <%= button_to "Show this preference", preference, method: :get, class:"blue-button hermitfont mt-2" %>
        </p>
      </div>
    <% end %>
  </div>
</div>
